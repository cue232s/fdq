<h1>Home#index</h1>
<p>Find Restaurants</p>

<%= link_to "Local Restaurants", restaurants_path %>


<ul>
	<% @terms.each do |search_term| %>

		<%= @tag = Tag.find(:all, :conditions => ["name = ?", search_term.name.downcase ]).first %>
		
		<li> <%= link_to(search_term.name, {:controller => "restaurants", :action => "index", :tag_id => @tag }) %> </li>

		<% end %>
</ul>
